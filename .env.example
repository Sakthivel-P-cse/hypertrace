# Environment Variables for CCP (Continuous Chaos Prevention)
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================

# Neo4j Database (used by RCA Engine, Dependency Graph, Conflict Detection)
NEO4J_PASSWORD=your_neo4j_password_here

# Redis (used by Distributed Lock Manager)
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# SMTP Email Notifications
SMTP_PASSWORD=your_smtp_password_here

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_TOKEN=xoxb-your-slack-bot-token

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# =============================================================================
# CLOUD PROVIDER CREDENTIALS (if using cloud services)
# =============================================================================

# AWS
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1

# Azure
# AZURE_SUBSCRIPTION_ID=your_subscription_id
# AZURE_CLIENT_ID=your_client_id
# AZURE_CLIENT_SECRET=your_client_secret
# AZURE_TENANT_ID=your_tenant_id

# GCP
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GCP_PROJECT_ID=your_project_id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY=your_secret_key_for_signing_tokens

# =============================================================================
# OPTIONAL: Service-Specific Settings
# =============================================================================

# Git Repository
GIT_REPO_PATH=/home/sakthi/PROJECTS/ccp

# Docker Registry (for deployment)
# DOCKER_REGISTRY=your_registry_url
# DOCKER_USERNAME=your_username
# DOCKER_PASSWORD=your_password

# Kubernetes (if using K8s for deployment)
# KUBECONFIG=/path/to/kubeconfig
# K8S_NAMESPACE=production
